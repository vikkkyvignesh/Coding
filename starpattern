import java.util.Scanner;

public class Pattern {
    public static void main(String[] args) {

        Scanner s = new Scanner(System.in);
        System.out.println("Enter the number :");
        int n = s.nextInt();

        for(int i=0;i<n*2;i++)
        {
            int totalcol = i>n ? 2*n-i : i;

            for(int j=0;j<totalcol;j++)
            {
                System.out.print("* ");
            }
            System.out.println();
        }



    }
}
